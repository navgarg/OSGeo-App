<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/geoserver"
                    android:layout_width="185dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:layout_height="103dp"
                    android:src="@drawable/geo_server" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/geoserver"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/geonode"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/geo_node" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="@string/geonode"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gdal"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/gdal" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/white"
                    android:text="@string/gdal"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/geomoose"
                    android:layout_width="185dp"
                    android:layout_weight="1"
                    android:layout_height="103dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/geo_moose" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/geo_moose"
                    android:layout_marginStart="5dp"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/geo_network"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/geo_network" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/geo_network"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/deegree"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:layout_weight="2"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/deegree" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:text="@string/deegree"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>


