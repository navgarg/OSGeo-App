<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OSGeo Projects"
            android:textSize="35sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/backLight"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/gdal"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/gdal1"
                android:text="@string/gdal"
                android:textAllCaps="false"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:textColor="@color/backLight"/>

            <Button
                android:id="@+id/deegree"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/deegree1"
                android:text="@string/osgeolive"
                android:layout_marginStart="15dp"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:textColor="@color/backLight"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/geo_tools"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/geo_tools1"
                android:text="@string/geo_tools"
                android:textAllCaps="false"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="15dp"
                android:textColor="@color/backLight"/>

            <Button
                android:id="@+id/qgis"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/qgis1"
                android:text="@string/qgis"
                android:layout_marginStart="15dp"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:textColor="@color/backLight"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/grass"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/grass1"
                android:text="@string/grass"
                android:textAllCaps="false"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/backLight"/>

            <Button
                android:id="@+id/istsos"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/istsos1"
                android:text="@string/istsos"
                android:layout_marginStart="15dp"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:textColor="@color/backLight"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/open_layers"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/open_layers1"
                android:text="@string/open_layers"
                android:textAllCaps="false"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/backLight"/>

            <Button
                android:id="@+id/osgeolive"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/osgeolive1"
                android:text="@string/osgeolive"
                android:layout_marginStart="15dp"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:textColor="@color/backLight"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pgRouting"
                android:layout_width="185dp"
                android:layout_height="180dp"
                android:background="@color/background"
                android:drawableTop="@drawable/pgrouting1"
                android:text="@string/pgrouting"
                android:textAllCaps="false"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/backLight"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>

