<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:context=".MainActivity">



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/backLight"
            android:text="GitHub Projects"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/osgeolive"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/osgeolive" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/osgeolive"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/deegree"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/deegree" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/deegree"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/open_layers"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/open_layers" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/open_layers"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/qgis"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/qgis" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/qgis"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/istsos"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/istsos" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/istsos"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pgRouting"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/pgrouting" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/pgrouting"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/backLight"
            android:text="Trac Projects"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="30sp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gdal"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/gdal" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/gdal"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/geo_tools"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/geo_tools" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/geo_tools"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grass"
                    android:layout_width="185dp"
                    android:layout_height="103dp"
                    android:src="@drawable/grass" />

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/grass"
                    android:textAlignment="center" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>

